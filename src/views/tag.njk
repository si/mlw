---
layout: base
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tag/{{ tag | slugify }}/
eleventyComputed:
  title: "{{ tag }}"
  description: Blog posts tagged to the category {{ tag }} by Mike Street, Brighton based front-end developer
---

<div class="container blog-container">
	<h1>{{ tag }}</h1>
	<p class="subtitle">Showing posts tagged <strong>"{{ tag }}"</strong> </p>


	<ul class="post-listing">
	{% set categoryList = collections[ tag ] %}
	{% for entry in categoryList %}
		{% include 'entry.njk' %}
	{% endfor %}
	</ul>

</div>
