---
layout: base
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tag/{{ tag | slugify }}/
eleventyComputed:
  title: "{{ tag }}"
  description: Blog posts tagged to the category {{ tag }} by Mike Street, Brighton based front-end developer
---

<div class="container blog-container">
	<h1>{{ tag }}</h1>
	<p class="subtitle">Showing posts for the tag <strong>"{{ tag }}"</strong> </p>


	<div class="post-listing">
		<ul class="post-listing-full">
		{% set categoryList = collections[ tag ] %}
		{% for entry in categoryList | reverse %}
			{% include 'entry.njk' %}
		{% endfor %}
		</ul>
	</div>
</div>
