---
layout: base
eleventyComputed:
  socialMediaPhoto: "{{ ogImage }}"
---
<div itemscope itemtype="http://schema.org/PublicationIssue" class="interviewSingle podcastSingle">

	<p class="meta">
		<span itemprop="issueNumber">#{{ episode }}</span>
		<time datetime="{{ date }}" itemprop="datePublished">
			{{ date }}
		</time>
	</p>

	{% if image %}
		{% include "banner.njk" %}
	{% endif %}


	<h1 itemprop="headline">{{ title }}</h1>

	<div class="intro" itemprop="abstract">
		{{ intro | safe }}
	</div>
	<div class="podcastLinks">

		<h2>Listen to episode <strong>{{ episode }}</strong></h2>

		{%- if enclosure %}
		<audio controls>
  			<source src="{{ enclosure }}" type="audio/mpeg">
		</audio>
		{%- endif %}

		<div>
			{%- if applePodcastsLink %}<a href="{{ applePodcastsLink }}" class="imageLink"><img itemprop="image" src="/images/assets/cta/applepodcasts-badge.svg" width="167" height="44" alt="Listen to {{ episode }} on Apple Podcasts"></a>{%- endif %}
			{%- if spotifyLink %}<a href="{{ spotifyLink }}" class="imageLink"><img itemprop="image" src="/images/assets/cta/spotify-badge.svg" width="167" height="44" alt="Listen to {{ episode }} on Spotify"></a>{%- endif %}
			{%- if googlePodcastsLink %}<a href="{{ googlePodcastsLink }}" class="imageLink"><img itemprop="image" src="/images/assets/cta/googlepodcasts-badge.svg" width="167" height="44" alt="Listen to {{ episode }} on Google Podcasts"></a>{%- endif %}
			{%- if amazonLink %}<a href="{{ amazonLink }}" class="imageLink"><img itemprop="image" src="/images/assets/cta/amazonmusic-badge.svg" width="167" height="44" alt="Listen to {{ episode }} on Amazon Music"></a>{%- endif %}
		</div>
		<p><small><a href="/subscribe/">Check out the subscribe options</a></p>
		
	</div>

	<div>
		{{ content | safe }}

	</div>

</div>
